//includes libraries stdio.h and math.h
#include <stdio.h>
#include "math.h"

int main()
{
    //Defines variables to be used in testing
    int num1 = 4;
    int num2 = 2;

    //Performs each operation on num1 and num2
    int ans1 = math(num1, num2, '+');
    int ans2 = math(num1, num2, '-');
    int ans3 = math(num1, num2, '*');
    int ans4 = math(num1, num2, '/');
    int ans5 = math(num1, num2, '%');
    int ans6 = math(num1, num2, '&');
    int ans7 = math(num1, num2, '|');
    int ans8 = math(num1, num2, '>');
    int ans9 = math(num1, num2, '<');
    int ans10 = math(num1, num2, '^');
    int ans11 = math(num1, num2, '~');


    //Prints example of all newly defined functions
    printf("4 + 2 = %d\n", ans1);
    printf("4 - 2 = %d\n", ans2);
    printf("4 * 2 = %d\n", ans3);
    printf("4 / 2 = %d\n", ans4);
    printf("4 mod 2 = %d\n", ans5);
    printf("4 >> 2 = %d\n", ans8);
    printf("4 << 2 = %d\n", ans9);
    printf("4 & 2 = %d\n", ans6);
    printf("4 | 2 = %d\n", ans7);
    printf("4 ^ 2 = %d\n", ans10);
    printf("~4 = %d\n", ans11);

    return 0;
}

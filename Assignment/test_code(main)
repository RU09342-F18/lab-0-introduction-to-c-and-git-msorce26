//includes libraries stdio.h and math.h
#include <stdio.h>
#include "math.h"

int main()
{
    //Defines variables to be used in testing
    double num1 = 1.0;
    double num2 = 2.0;
    int num3 = 3;
    int num4 = 4;
    int shift_num = 2;
    int bit1 = 7;
    int bit2 = 0;
    
    double ans1 = add(num1, num2); //Expected output:3 (1+2)
    double ans2 = subtract(num1, num2);//Expected output:-1 (1-2)
    double ans3 = multiply(num1, num2);//Expected output:2 (1*2)
    double ans4 = divide(num1, num2);//Expected output:0.5 (1/2)
    int ans5 = modulus(num4, num3);//Expected output:1 (3 % 4)
    int ans6 = rightshift(shift_num, 1);//Expected output:1 (2(010) >> 1)
    int ans7 = leftshift(shift_num, 1);//Expected output:1 (2(010) << 1)
    int ans8 = AND(bit1, bit2);//Expected output:0 (7(111) & 0 (000))
    int ans9 = OR(bit1, bit2);//Expected output:7 (7(111) | 0 (000))
    int ans10 = XOR(bit1, bit2);//Expected output:7 (7(111) ^ 0 (000))
    int ans11 = inverse(shift_num);//Expected output:-3 (inverse of 2(010) = -3(101))
    
    //Prints example of all newly defined functions
    printf("1 + 2 = %1f\n", ans1);
    printf("1 - 2 = %1f\n", ans2);
    printf("1 * 2 = %1f\n", ans3);
    printf("1 / 2 = %1f\n", ans4);
    printf("3 % 4 = %d\n", ans5);
    printf("2 >> 1 = %d\n", ans6);
    printf("2 << 1 = %d\n", ans7);
    printf("7 & 0 = %d\n", ans8);
    printf("7 | 0 = %d\n", ans9);
    printf("7 ^ 0 = %d\n", ans10);
    printf("~2 = %d\n", ans11);

    return 0;
}
